global:
  

route:
  group_by: ['instance', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  routes:
  - match:
      alertname: InstanceDown
  receiver: 'alert-team'

receivers:
- name: 'alert-team'
  slack_configs:
  - channel: "#webhook-test"
    text: "summary: \ndescription: "
    webhook_configs:
      - url:
      {% for host in groups['alertmanager'] %}
      {% if inventory_hostname != host %}
            '{{ host }}/alert/{{ telegramId }}'
      {% endif %}
      {% endfor %}
